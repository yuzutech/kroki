{
  "name": "@kroki/excalidraw-server",
  "version": "1.0.0",
  "description": "A micro server built on top of the Excalidraw diagram library.",
  "type": "module",
  "main": "src/index.js",
  "bin": "src/index.js",
  "scripts": {
    "prestart": "cp -r ./node_modules/@excalidraw/excalidraw/dist/prod/fonts ./assets/",
    "build": "npx esbuild ./assets/index.js --bundle --minify --outfile=./assets/index.bundle.js",
    "start": "node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard src/**.js"
  },
  "keywords": [],
  "author": "Guillaume Grossetie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuzutech/kroki.git"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "0.18.0",
    "micro": "10.0.1",
    "pino": "10.3.1",
    "pino-debug": "4.0.1",
    "puppeteer": "22.4.1",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "esbuild": "0.27.3",
    "standard": "17.1.2"
  },
  "volta": {
    "node": "24.14.0"
  }
}
